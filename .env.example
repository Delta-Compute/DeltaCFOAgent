# ===============================================
# Delta CFO Agent - Environment Configuration
# ===============================================

# ===============================================
# APPLICATION SETTINGS
# ===============================================
FLASK_ENV=production
FLASK_DEBUG=false
PORT=8080

# ===============================================
# DATABASE CONFIGURATION
# ===============================================
# Database type: Always use 'postgresql' (SQLite deprecated)
DB_TYPE=postgresql

# PostgreSQL settings (Cloud SQL or local)
DB_HOST=your-cloud-sql-instance-ip
DB_PORT=5432
DB_NAME=delta_cfo
DB_USER=your-db-user
DB_PASSWORD=your-db-password
DB_SSL_MODE=require

# Cloud SQL socket path (for Cloud Run)
DB_SOCKET_PATH=/cloudsql/your-project-id:region:instance-name

# ===============================================
# GOOGLE CLOUD CONFIGURATION
# ===============================================
GOOGLE_CLOUD_PROJECT=your-project-id
CLOUD_SQL_CONNECTION_NAME=your-project-id:region:instance-name

# ===============================================
# API KEYS & SECRETS
# ===============================================
ANTHROPIC_API_KEY=your_claude_api_key_here

# ===============================================
# FIREBASE AUTHENTICATION
# ===============================================
# Firebase service account credentials (JSON string or file path)
# Option 1: Provide JSON string directly
FIREBASE_SERVICE_ACCOUNT_KEY={"type":"service_account","project_id":"aicfo-473816",...}

# Option 2: Provide path to service account JSON file
FIREBASE_SERVICE_ACCOUNT_PATH=/path/to/firebase-service-account.json

# Firebase project configuration
FIREBASE_PROJECT_ID=aicfo-473816
FIREBASE_AUTH_DOMAIN=aicfo-473816.firebaseapp.com

# ===============================================
# EMAIL CONFIGURATION
# ===============================================
# Email service provider (sendgrid, smtp, ses)
EMAIL_PROVIDER=sendgrid

# SendGrid configuration
SENDGRID_API_KEY=your_sendgrid_api_key_here
SENDGRID_FROM_EMAIL=noreply@yourdomain.com
SENDGRID_FROM_NAME=Delta CFO Agent

# SMTP configuration (alternative to SendGrid)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_USE_TLS=true

# Email settings
INVITATION_EMAIL_EXPIRY_DAYS=7
APP_BASE_URL=https://yourdomain.com

# ===============================================
# SECURITY SETTINGS
# ===============================================
SECRET_KEY=your-flask-secret-key-change-in-production
MAX_CONTENT_LENGTH=52428800  # 50MB

# ===============================================
# LOGGING & MONITORING
# ===============================================
LOG_LEVEL=INFO
ENABLE_DEBUG_LOGGING=false

# ===============================================
# FEATURE FLAGS
# ===============================================
ENABLE_INVOICE_PROCESSING=true
ENABLE_EMAIL_PROCESSING=false
ENABLE_CRYPTO_PRICING=true